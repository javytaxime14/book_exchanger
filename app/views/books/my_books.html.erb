<h1 class= "mb-5"> Mis libros </h1>

<div class="row">
  <% @books.each do |book| %>
    <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
        <div class="card-body">
          <p class="card-text"><%= book.title %></p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                <%= link_to 'Ver', book_path(book), class: 'btn btn-sm btn-outline-secondary' %>
                <%= link_to 'Editar', edit_book_path(book), class: 'btn btn-sm btn-outline-secondary' %>
                <%= link_to 'Eliminar', book_path(book), method: :delete, data: { confirm: 'EstÃ¡ seguro de eliminar este libro?' }, class: 'btn btn-sm btn-outline-secondary' %>
                </div>
            </div>
        </div>
        </div>
    </div>
    <% end %>
</div>

<%= link_to 'Agregar libro', new_book_path, class: 'btn btn-primary btn-sm' %>
<%= link_to 'Todos los libros', books_path, class: 'btn btn-primary btn-sm' %>
<%= link_to 'Home', root_path, class: 'btn btn-primary btn-sm' %>

