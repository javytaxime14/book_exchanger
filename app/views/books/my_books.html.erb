<% if current_user == @user %>
<h1 class= "mb-5"> Mis libros </h1>
<% end %>
<% if current_user != @user %>
<h1 class= "mb-5"> Libros de <%= @user.name %> <%= @user.last_name %> </h1>
<% end %>

<div class="row">
  <% @books.each do |book| %>
    <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
        <div class="card-body">
          <p class="card-text"><%= book.title %></p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <% if current_user == @user %>
                    <%= link_to 'Ver', book_path(book), class: 'btn btn-sm btn-outline-secondary' %>
                    <%= link_to 'Editar', edit_book_path(book), class: 'btn btn-sm btn-outline-secondary' %>
                    <%= link_to 'Eliminar', book_path(book), method: :delete, data: { confirm: 'Está seguro de eliminar este libro?' }, remote: true, class: 'btn btn-sm btn-outline-secondary' %>
                  <% end %>
                  <% if current_user != @user %>
                    <%= link_to 'Ver', book_path(book), class: 'btn btn-sm btn-outline-secondary' %>
                  <% end %>
                </div>
            </div>
        </div>
        </div>
    </div>
    <% end %>
</div>


<% if current_user == @user %>
  <%= link_to 'Agregar libro', new_book_path, class: 'btn btn-primary btn-sm' %>
  <%= link_to 'Todos los libros', books_path, class: 'btn btn-primary btn-sm' %>
  <%= link_to 'Home', root_path, class: 'btn btn-primary btn-sm' %>
<% end %>
<% if current_user != @user %>
  <%= link_to 'Todos los libros', books_path, class: 'btn btn-primary btn-sm' %>
  <%= link_to 'Home', root_path, class: 'btn btn-primary btn-sm' %>
<% end %>

<div class="row">
  <div class="col-md-8 offset-md-3 mt-3 mb-3">
    <%= paginate @books %>
    <%= link_to_next_page @books, 'Mostrar más' %>
  </div>
</div>


