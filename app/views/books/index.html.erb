<h1>Books</h1>

<%= link_to "Let's add a book!", new_book_path, class: 'btn btn-secondary btn-sm mt-5', style: 'float: left;' %>

<div class="row">
  <div class="col-md-3 offset-md-7">
    <% if user_signed_in? %>
      <h4>Looking for a book?</h4>
      <div class="form-group">
        <%= render '_search_form' %>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="books_list mt-5">
      <%= render @books %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-8 offset-md-5 mt-3">
    <%= paginate @books %>
    <%= link_to_next_page @books, 'Mostrar mÃ¡s' %>
  </div>
</div>



