<div class="container mt-5">
  <h2>Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, "New password", class: 'book-label' %> <br/>
      <% if @minimum_password_length %>
        <em class="book-label"><small>(<%= @minimum_password_length %> characters minimum)</small></em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'mb-2' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Confirm new password", class: 'book-label' %> <br/>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'mb-2' %>
    </div>

    <div class="actions my-3">
      <%= f.submit "Change my password", class: 'btn btn-custom-1' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
