<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <%= form_for([@book, @book.reviews.build]) do |f| %>
                <div class="form-group">
                    <div class="field" id="rating-form">
                        <%= f.label :rating, class: 'session-label' %> <br />
                    </div>
                    <br />
                    <div class="field">
                        <%= f.label :comment, class: 'mb-2 session-label' %><br />
                        <%= f.text_area :comment, class: 'form-control form-control-sm' %>
                    </div>
        </div>
                    <div class="actions mt-2">
                        <%= f.submit 'Add Review', class: 'btn btn-sm btn-danger' %>
                        <%= link_to 'Back', book_path(@book), class: 'btn btn-sm btn-secondary' %>
                    </div>
                </div>
            <% end %>
        <div class="col-md-8">
            <%= image_tag '8.png', class: 'img-fluid mt-0', style: 'width: 86%' %>
        </div>
    </div>
</div>

<script>
        $('#rating-form').raty({
            path: '/assets/',
            scoreName: 'review[rating]'
        });
</script>
