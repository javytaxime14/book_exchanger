<div class="review-rating" data-score="<%= review.rating %>"></div>
<p><%= review.comment %></p>

<% if user_signed_in? %>
    <% if review.user_id == current_user.id %>
        <%= link_to 'Edit', edit_book_review_path(@book, review), class: 'btn btn-sm btn-primary' %>
        <%= link_to 'Delete', book_review_path(@book, review), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-warning' %>
        <%= link_to 'Back', book_path(@book), class: 'btn btn-sm btn-secondary' %>
    <% else %>
        <%= link_to 'Back', book_path(@book), class: 'btn btn-sm btn-secondary' %>
    <% end %>
<% end %>
